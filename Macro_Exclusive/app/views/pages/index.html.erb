<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>Tools Shop</title>
<meta charset="UTF-8"/>
<link rel="stylesheet" type="text/css" href="/app/assets/stylesheets/style.css" />
<script type="text/javascript" src="/app/assets/javascripts/boxOver.js"></script>
</head>
<body>
<div id="main_container">
    
  <div id="header">
    <div class="top_right">
      <div class="big_banner"> <a href="#"><%= image_tag "banner728.jpg" %></a> </div>
    </div>
    <div id="logo"> <a href="#"><%= image_tag "logo.webp", size: "100x100" %></a> </div>
  </div>
  <div id="main_content">
    <div id="menu_tab">
        <ul class="menu">
            <li><%= link_to "Strona startowa", @index, class: "nav" %> </li>
            <li class="divider"></li>
            <li><%= link_to "Produkty", products_path, class: "nav" %> </li>
            <li class="divider"></li>
            <li><%= link_to "Moje konto", @index, class: "nav" %> </li>
            <li class="divider"></li>
            <% if !logged_in? %>
            <li><%= link_to "Zaloguj się", "sessions/login", class: "nav" %> </li>
            <%else%>
            <li><%= link_to "Wyloguj mnie", "sessions/logout", method: :delete, class: "nav" %> </li>
            <%end%>
            <li class="divider"></li>
            <li><%= link_to "Kontakt", @contact, class: "nav" %> </li>
        </ul>
    </div>
    <!-- end of menu tab -->
    <div class="left_content">
      <div class="title_box">Kategorie</div>
      <ul class="left_menu">
          <li class="odd"><%= link_to "Części zapasowe", @parts, class: "odd" %></li>
          <li class="odd"><%= link_to "Narzędzia", @tools, class: "even" %></li>
          <li class="odd"><%= link_to "Kosiarki", @kosiarki, class: "odd" %></li>
          <li class="odd"><%= link_to "Odzież robocza", @clothes, class: "even" %></li>
      </ul>
      <div class="title_box">Oferta specjalna</div>
      <div class="border_box">
        <div class="product_title"><a href="#">Makita 156 MX-VL</a></div>
        <div class="product_img"><a href="#"><%= image_tag "p1.jpg" %></a></div>
        <div class="prod_price"><span class="reduce">350zł</span> <span class="price">270zł</span></div>
      </div>
      <div class="title_box">Newsletter</div>
      <div class="border_box">
        <input type="text" name="newsletter" class="newsletter_input" value="twój adres email"/>
      </div>
    </div>
    <!-- end of left content -->
    <div class="center_content">
      <div class="center_title_bar">Najnowsze produkty</div>
