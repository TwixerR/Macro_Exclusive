  <!-- end of main content -->
  <div class="footer">
      <div class="left_footer"> <%= image_tag "logo.webp", size: "100x100" %> </div>
    <div class="center_footer">
        <%= image_tag "payment.gif" %>
    </div>
  </div>
</div>
<!-- end of main_container -->
</body>
</html>
